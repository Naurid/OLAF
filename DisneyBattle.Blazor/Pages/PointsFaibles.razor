@page "/PointsFaibles"
@using DinseyBattle.Blazor.Models
@rendermode RenderMode.InteractiveAuto
@inject NavigationManager Nvm

<h3>Points Faibles</h3>
<div class="container-fluid d-flex flex-wrap">
    @foreach (PointFaibleModel pointFaibleModel in _pointsFaibles)
    {
        <div class="card bg-cheos text-white shadow-sm m-4" style="width: 18rem;">
            <div class="card-body d-flex flex-column">
                <div>
                    <h5 class="card-title">@pointFaibleModel.Nom</h5>
                    <p class="card-text">@pointFaibleModel.Description</p>
                </div>
                <div class="pt-4 mt-auto text-center">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal" @onclick="()=>SetModalValues(pointFaibleModel)">
                        Modify
                    </button>
                </div>
            </div>
        </div>
    } 
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@(_currentPointFaible?.Nom ?? "unknown")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form inside the modal -->
                <EditForm Model="_currentPointFaible" OnValidSubmit="OnValidSubmit" OnInvalidSubmit="OnInvalidSubmit">
                    <DataAnnotationsValidator/>
                    <label for="Name">Nom</label>
                    <InputText class="form-control" id="Name" @bind-Value=@_currentPointFaible.Nom/>
                    <label for="Email">Description</label>
                    <InputText class="form-control" id="Email" @bind-Value=@_currentPointFaible.Description/>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit">Update</button>
                    </div>
                    <ValidationSummary/>
                </EditForm>
            </div>
       
        </div>
    </div>
</div>

<button class="btn btn-primary fixed-button" data-bs-toggle="modal" data-bs-target="#createModal">+</button>

<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">@(_currentPointFaible?.Nom ?? "unknown")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form inside the modal -->
                <EditForm Model="_currentPointFaible" OnValidSubmit="OnCreateSubmit" OnInvalidSubmit="OnInvalidSubmit">
                    <DataAnnotationsValidator/>
                    <label for="createModalName">Nom</label>
                    <InputText class="form-control" id="createModalName" @bind-Value=@_currentPointFaible.Nom/>
                    <label for="createModalEmail">Description</label>
                    <InputText class="form-control" id="createModalEmail" @bind-Value=@_currentPointFaible.Description/>
                    <div class="modal-footer">
                        <button class="btn btn-success" type="submit">Create</button>
                    </div>
                    <ValidationSummary/>
                </EditForm>
            </div>

        </div>
    </div>
</div>

<style>
    /* Custom CSS to make the button fixed at the lower right corner */
    .fixed-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 9999; /* Ensure it's on top of other content */
    }
</style>


@code
{
    [Inject]
    public HttpClient HttpClient { get; set; } 
    
    List<PointFaibleModel> _pointsFaibles = new();

    PointFaibleModel _currentPointFaible = new PointFaibleModel();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _pointsFaibles = await HttpClient.GetFromJsonAsync<List<PointFaibleModel>>("https://localhost:7171/api/PointFaible");
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }

    private void SetModalValues(PointFaibleModel lieu) => _currentPointFaible = lieu;

   

    private void OnInvalidSubmit()
    {
        Nvm.NavigateTo("PointsFaibles", forceLoad: true);
    }

    private async Task OnCreateSubmit()
    {
        try
        {
            var response = await HttpClient.PostAsJsonAsync<PointFaibleModel>($"https://localhost:7171/api/Lieu/PointFaible", _currentPointFaible);
            response.EnsureSuccessStatusCode();
            Nvm.NavigateTo("PointsFaibles", forceLoad: true);
            StateHasChanged();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            throw e.InnerException;
        }
    }

    private async Task OnValidSubmit()
    {
        try
        {
            var response = await HttpClient.PutAsJsonAsync<PointFaibleModel>($"https://localhost:7171/api/PointFaible/Put/{_currentPointFaible.Id}", _currentPointFaible);
            response.EnsureSuccessStatusCode();
            Nvm.NavigateTo("PointsFaibles", forceLoad: true);
            StateHasChanged();
        }
        catch (Exception e)
        {
            throw e.InnerException;
        }
    }
}
